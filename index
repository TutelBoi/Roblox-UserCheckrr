<body>
<div class="container">
<h1>Roblox Username Checker</h1>
<input type="text" id="username" placeholder="Enter a username">
<button onclick="checkUsername()">Check</button>
<div id="result"></div>
</div>

<script>
async function checkUsername() {
const username = document.getElementById("username").value.trim();
const resultDiv = document.getElementById("result");

if (!username) {
resultDiv.innerHTML = `<span style="color: var(--error);">Please enter a username.</span>`;
return;
}

resultDiv.innerHTML = "Checking...";

try {
const response = await fetch("https://corsproxy.io/?https://users.roblox.com/v1/usernames/users", {
method: "POST",
headers: {
"Content-Type": "application/json"
},
body: JSON.stringify({
usernames: [username],
excludeBannedUsers: false
})
});

const data = await response.json();

if (data.data && data.data.length > 0) {
resultDiv.innerHTML = `<span style="color: var(--error);">❌ "${username}" is taken.</span>`;
} else {
resultDiv.innerHTML = `<span style="color: var(--success);">✅ "${username}" is available!</span>`;
}

} catch (error) {
resultDiv.innerHTML = `<span style="color: var(--error);">❌ Error checking username.</span>`;
console.error(error);
}
}
</script>
</body>
